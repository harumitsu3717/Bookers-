<h1><strong>Editing Book</strong></h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <%= @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<p>Title</p>
  <div class="edit_object">
    <%= f.text_field :title %>
  </div>
<p>Body</p>
  <div class="edit_object">
    <%= f.text_area :body %>
  </div>
<div class="edit_object">
  <%= f.submit 'Update Book' %>
</div>

<% end %>

<p><%= link_to "Show", "/books/#{@book.id}" %> | <%= link_to "Back", "/books" %></p>

