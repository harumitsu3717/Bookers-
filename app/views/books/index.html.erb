<h1><srtong>Books</strong></h1>

<table>

  <thead>
    <tr>
      <th><strong>Title</strong></th>
      <th><strong>Body</strong></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", "/books/#{book.id}" %></td>
      <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
      <td><%= link_to "Destroy", destroy_book_url(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>

</table>




<h2><strong>New book</strong></h2>

<%= form_with model: @book do |f| %>

  <p>title</p>
  <%= f.text_field :title, name: "book[title]" %>

  <p>body</p>
  <%= f.text_area :body, name: "book[body]" %>

  <%= f.submit 'Create Book' %>

<% end %>
