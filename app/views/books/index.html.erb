    <%= @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>

  <p>Title</p>
    <div class="new_object">
      <%= f.text_field :title, name: "book[title]" %>
    </div>

  <p>Body</p>
  <div class="new_object">
    <%= f.text_area :body, name: "book[body]" %>
  </div>

  <%= f.submit 'Create Book' %>

<% end %>
